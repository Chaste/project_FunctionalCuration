<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
    <display-name>FunctionalCuration</display-name>

    <context-param> 
        <description>Are we running in production env?</description> 
        <param-name>production</param-name> 
        <param-value>false</param-value> 
    </context-param> 

    <context-param> 
        <description>Where to put temporary files?</description> 
        <param-name>tempDir</param-name> 
        <param-value>/tmp/chaste-temp</param-value> 
    </context-param> 
    <context-param> 
        <description>Where to put files?</description> 
        <param-name>storageDir</param-name> 
        <param-value>/tmp/chaste-storage</param-value> 
    </context-param> 

    <context-param> 
        <description>Where's Chaste located?</description> 
        <param-name>chasteURL</param-name> 
        <param-value>http://chaste.cs.ox.ac.uk</param-value> 
    </context-param> 

    <context-param> 
        <description>Who's the sender of emails?</description> 
        <param-name>mailSender</param-name> 
        <param-value>noreply@chaste.cs.ox.ac.uk</param-value> 
    </context-param> 
    <context-param> 
        <description>What's the name of the sender of emails?</description> 
        <param-name>mailSenderName</param-name> 
        <param-value>Chaste</param-value> 
    </context-param> 

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Contact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Db</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.DB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileTransfer</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.FileTransfer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Me</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Me</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Model</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.ModelView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Protocol</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.ProtocolView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>uk.ac.ox.cs.chaste.fc.web.Admin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/contact.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Db</servlet-name>
        <url-pattern>/db.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileTransfer</servlet-name>
        <url-pattern>/upload.html</url-pattern>
        <url-pattern>/download/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Me</servlet-name>
        <url-pattern>/myaccount.html</url-pattern>
        <url-pattern>/myfiles.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Model</servlet-name>
        <url-pattern>/model/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Protocol</servlet-name>
        <url-pattern>/protocol/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin.html</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
</web-app>
